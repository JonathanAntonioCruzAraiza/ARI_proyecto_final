<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:id="@+id/gv_figuras"
    android:background="@drawable/wallpaperimage"
    tools:context="mx.edu.utng.menu.figurasgeometricas.FigurasGeometricasActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ib_cilindro"
                    android:layout_gravity="center"
                    android:src="@drawable/c_cilindro"
                    android:layout_margin="@dimen/margin_size"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ib_circulo"
                    android:layout_gravity="center"
                    android:src="@drawable/c_circulo"
                    android:layout_margin="@dimen/margin_size"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ib_cuadrado"
                    android:layout_gravity="center"
                    android:src="@drawable/c_cuadrado"
                    android:layout_margin="@dimen/margin_size"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ib_cubo"
                    android:layout_gravity="center"
                    android:src="@drawable/c_cubo"
                    android:layout_margin="@dimen/margin_size"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ib_ovalo"
                    android:layout_gravity="center"
                    android:src="@drawable/c_ovalo"
                    android:layout_margin="@dimen/margin_size"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ib_piramide"
                    android:layout_gravity="center"
                    android:src="@drawable/c_piramide"
                    android:layout_margin="@dimen/margin_size"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ib_rectangulo"
                    android:layout_gravity="center"
                    android:src="@drawable/c_rectangulo"
                    android:layout_margin="@dimen/margin_size"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ib_rombo"
                    android:layout_gravity="center"
                    android:src="@drawable/c_rombo"
                    android:layout_margin="@dimen/margin_size"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ib_triangulo"
                    android:layout_gravity="center"
                    android:src="@drawable/c_triangulo"
                    android:layout_margin="@dimen/margin_size"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jugar"
                    android:id="@+id/bt_jugar"
                    android:layout_margin="30dp"
                    android:layout_gravity="center|left"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
