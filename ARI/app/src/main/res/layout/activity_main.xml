<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/operaciones_fondo"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="394dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView_imagenn"
            android:layout_width="183dp"
            android:layout_height="171dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@drawable/feliz"
            android:layout_weight="0.06" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="175dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">


        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="iniciar"
            android:background="@drawable/jugar"
            android:layout_weight="0.10" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_alignParentTop="true"
            android:layout_weight="0.10"
            android:layout_below="@+id/button1"
            android:layout_centerHorizontal="true"
            android:onClick="pausar"
            android:background="@drawable/pausa"  />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_alignParentTop="true"
            android:layout_weight="0.10"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:onClick="continuar"
            android:background="@drawable/siguiente" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_alignParentTop="true"
            android:layout_weight="0.10"
            android:layout_below="@+id/button3"
            android:layout_centerHorizontal="true"
            android:onClick="detener"
            android:background="@drawable/detener" />

        <Button
            android:id="@+id/button5"
            android:layout_width="47dp"
            android:layout_height="66dp"
            android:layout_alignParentTop="true"
            android:layout_weight="0.10"

            android:layout_below="@+id/button4"
            android:layout_centerHorizontal="true"
            android:onClick="circular"
            android:background="@drawable/operaciones_fondo"
            android:text="" /></LinearLayout>

</LinearLayout>