<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/segunda_Act"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/papel"
    tools:context=".escriberNombre.Nombre"
    xmlns:tools="http://schemas.android.com/tools">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nombre"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/android_green"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/et_nombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/liner_datos"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_escribir_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            >

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>



    <Button
        android:id="@+id/bt_revisar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="@color/accentColor"
        android:text="Revisar"
        android:textSize="20dp"
        android:textStyle="bold"
         />

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_revisar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Escribe tu nombre"
        android:textColor="@color/android_yellow"
        android:inputType="text"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>