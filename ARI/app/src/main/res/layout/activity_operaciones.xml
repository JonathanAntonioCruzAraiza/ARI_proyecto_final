<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".operaciones.Operaciones"
    android:weightSum="1"
    android:background="@drawable/operaciones_fondo"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_targert_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="1dp">

            <Button
                android:id="@+id/bt_test_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#8BC34A"
                android:text="colocar numero 1" />
        l</LinearLayout>

        <LinearLayout
            android:id="@+id/bt_targert_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">

            <ToggleButton
                android:id="@+id/tb_operacion"
                android:background="#E91E63"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textOn="-"
                android:textOff="+"
                android:textSize="30dp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_targert_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="1dp">

            <Button

                android:id="@+id/bt_test_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#2196F3"
                android:text="colocar numero 2" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">

            <Button
                android:id="@+id/bt_test_3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#FFC107"
                android:text="="
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:id="@+id/dato"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />

        </LinearLayout>


    </LinearLayout>


    <!--switcher-->

    <ViewSwitcher
        android:id="@+id/switcher_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <!--Layouut prrincipal-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#90FE1000"
                    android:text="1"
                    />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#8BC34A"
                    android:text="2" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#E91E63"
                    android:text="3" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#2196F3"
                    android:text="4" />

                <Button
                    android:id="@+id/bt_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="#FFC107"
                    android:text="5" />
            </LinearLayout>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00BCD4"
                    android:text="6" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FF5722"
                    android:text="7" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#E040FB"
                    android:text="8" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#CDDC39"
                    android:text="9" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#009688"
                    android:text="10" />
            </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#90FE1000"
                    android:text="1" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btn_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#8BC34A"
                    android:text="2" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btn_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#E91E63"
                    android:text="3" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btn_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#2196F3"
                    android:text="4" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btn_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFC107"
                    android:text="5" />
            </LinearLayout>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00BCD4"
                    android:text="6" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btn_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FF5722"
                    android:text="7" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btn_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#E040FB"
                    android:text="8" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btn_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#CDDC39"
                    android:text="9" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btn_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#009688"
                    android:text="10" />
            </LinearLayout>

        </LinearLayout>
    </ViewSwitcher>

    <Button
        android:id="@+id/bt_limpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        android:background="@color/android_darkorange"
        android:text="limpiar" />
</LinearLayout>
