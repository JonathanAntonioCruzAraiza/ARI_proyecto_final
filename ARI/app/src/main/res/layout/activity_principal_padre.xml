<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/interfaz1"
    >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="65dp">
                <!--Actividad Papa-->
                <TextView
                    android:id="@+id/instrucciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Colocar la letra faltante correspondiente a la palabra."
                    android:textSize="15dp"
                    android:fontFamily="serif"
                    android:textAlignment="inherit"
                    android:textColor="@color/label3"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:id="@+id/palabra_p"
                    android:layout_height="43dp"
                    android:text="P"
                    android:textSize="20dp"
                    android:textColor="@color/label5"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="false"
                    android:layout_marginBottom="202dp"
                    android:layout_below="@+id/instrucciones"
                    android:layout_width="64dp" />

                <Spinner
                    android:layout_width="31dp"
                    android:layout_height="43dp"
                    android:id="@+id/spinner1"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="@color/label5"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/palabra_p"
                    android:layout_weight="0.43"

                    />



                <TextView
                    android:id="@+id/palabra_a"
                    android:layout_width="31dp"
                    android:layout_height="43dp"
                    android:text="D"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/label5"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/palabra_p"
                    android:layout_weight="0.04" />

                <TextView
                    android:id="@+id/palabra_r"
                    android:layout_width="25dp"
                    android:text="R"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/label5"
                    android:textStyle="bold"
                    android:layout_below="@+id/palabra_d"
                    android:layout_weight="0.12"
                    android:layout_height="43dp" />

                <TextView
                    android:id="@+id/palabra_e"
                    android:layout_width="25dp"
                    android:text="E"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/label5"
                    android:textStyle="bold"
                    android:layout_below="@+id/palabra_r"
                    android:layout_weight="0.12"
                    android:layout_height="43dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="88dp">

                <Button
                    android:onClick=""
                    android:id="@+id/bt_revisar"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:text="Revisar"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="casual"
                    android:textAlignment="center"
                    android:background="@color/interfaz3"
                    android:textColor="@color/label4"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
